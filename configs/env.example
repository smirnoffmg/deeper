# Deeper Environment Configuration Example
# Copy this file to .env and modify as needed

# HTTP Configuration
DEEPER_HTTP_TIMEOUT=30s
DEEPER_MAX_RETRIES=3
DEEPER_RETRY_DELAY=1s
DEEPER_USER_AGENT=Deeper/1.0

# Concurrency Configuration
DEEPER_MAX_CONCURRENCY=10
DEEPER_RATE_LIMIT=5

# Worker Pool Configuration
DEEPER_WORKER_POOL_MAX_WORKERS=20
DEEPER_WORKER_POOL_QUEUE_SIZE=1000

# Deduplication Configuration
DEEPER_DEDUP_ENABLE_CACHE=true
DEEPER_DEDUP_CACHE_TTL=24h
DEEPER_DEDUP_MAX_MEMORY_SIZE=10000
DEEPER_DEDUP_ENABLE_METRICS=true
DEEPER_DEDUP_CLEANUP_INTERVAL=1h
DEEPER_DEDUP_PERSISTENT_CACHE=true
DEEPER_WORKER_POOL_RATE_LIMIT=10.0
DEEPER_WORKER_POOL_BURST=5
DEEPER_WORKER_POOL_TASK_TIMEOUT=30s
DEEPER_WORKER_POOL_ENABLE_DEDUP=true
DEEPER_WORKER_POOL_ENABLE_METRICS=true

# Domain-Specific Rate Limiting Configuration
# Format: DEEPER_DOMAIN_RATE_<DOMAIN>_<PARAMETER>
# Example configurations for common domains:
DEEPER_DOMAIN_RATE_GITHUB_COM_RATE_LIMIT=5.0
DEEPER_DOMAIN_RATE_GITHUB_COM_BURST=2
DEEPER_DOMAIN_RATE_GITHUB_COM_BACKOFF_BASE=2s
DEEPER_DOMAIN_RATE_GITHUB_COM_BACKOFF_MAX=120s
DEEPER_DOMAIN_RATE_GITHUB_COM_MAX_RETRIES=3

DEEPER_DOMAIN_RATE_API_GITHUB_COM_RATE_LIMIT=2.0
DEEPER_DOMAIN_RATE_API_GITHUB_COM_BURST=1
DEEPER_DOMAIN_RATE_API_GITHUB_COM_BACKOFF_BASE=5s
DEEPER_DOMAIN_RATE_API_GITHUB_COM_BACKOFF_MAX=300s
DEEPER_DOMAIN_RATE_API_GITHUB_COM_MAX_RETRIES=5

DEEPER_DOMAIN_RATE_GOOGLE_COM_RATE_LIMIT=3.0
DEEPER_DOMAIN_RATE_GOOGLE_COM_BURST=1
DEEPER_DOMAIN_RATE_GOOGLE_COM_BACKOFF_BASE=3s
DEEPER_DOMAIN_RATE_GOOGLE_COM_BACKOFF_MAX=180s
DEEPER_DOMAIN_RATE_GOOGLE_COM_MAX_RETRIES=4

# Circuit Breaker Configuration
DEEPER_CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
DEEPER_CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60s
DEEPER_CIRCUIT_BREAKER_HALF_OPEN_MAX_CALLS=3
DEEPER_CIRCUIT_BREAKER_WINDOW_SIZE=60s

# Logging Configuration
DEEPER_LOG_LEVEL=info
DEEPER_LOG_FORMAT=json

# Plugin Configuration
DEEPER_PLUGIN_HEALTH_CHECK_INTERVAL=5m
DEEPER_PLUGIN_HEALTH_CHECK_TIMEOUT=30s
DEEPER_ENABLE_METRICS=true

# Output Configuration
DEEPER_OUTPUT_FORMAT=table
DEEPER_ENABLE_COLORS=true
DEEPER_SHOW_PROGRESS=true

# Security Configuration
DEEPER_ENABLE_RATE_LIMITING=true
DEEPER_MAX_REQUESTS_PER_MINUTE=300
DEEPER_ENABLE_INPUT_VALIDATION=true

# Development Configuration
DEEPER_ENABLE_DEBUG_MODE=false
DEEPER_ENABLE_PROFILING=false
DEEPER_ENABLE_TRACE_LOGGING=false
